Algoritmo "operadora"
// Disciplina   : [Linguagem e Lógica de Programação] 
// Professor   : Antonio Carlos Nicolodi 

Var

   minutos : inteiro
   valorPago : real


Inicio

      escreva("Digite a quantidade de minutos: ")
      leia(minutos)

      valorPago <- 50.00
      
      se minutos > 100 entao
         escreva("Valor a pagar: R$", plano:4:2)

        fimse

      


Fimalgoritmo