Algoritmo "condicional"

Var

   x : inteiro

Inicio

      escreva("Digite valor de X: ")
      leia(x)

      se x < 0 entao
         escreval("Bom dia! Pois", x, " é menor que 0")
      fimse
      
      se x >= 5 entao
         escreval("Boa tarde! Pois", x, " é maior ou igual a 0")
      fimse
      
      se x <= 0 entao
         escreval("Boa noite!")
      fimse
      


Fimalgoritmo